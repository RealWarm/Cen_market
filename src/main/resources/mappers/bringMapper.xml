<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.cen.mapper.BringMapper">
  
  	<select id="mainListAll"
      resultType="com.cen.domain.MainVO">
      select
			*
		from
			tbl_sboard
		order by
			sb_regdate
		limit
			8;
    </select>
    
    <!-- 상세페이지 보여주기 -->
    <select id="sdetail"    		
    		resultType="com.cen.domain.SboardVO">
    	select
    		*
    	from
    		tbl_sboard
    	where
    		sb_num=${num}    
    </select>
    
    <select id="bringViewAll"
    		resultType="com.cen.domain.ViewVO">
    	select 
			* 
		from 
			tbl_view
		where
			sb_num=${num};
    </select>
    
    <select id="bringTop"
    		resultType="java.lang.String">
    	select 
			view_name
		from 
			tbl_view
		where
			sb_num=${num}
		limit
			1;
    </select>
    
    <select id="bringReply"
    		resultType="com.cen.domain.ReplyVO">
    	select 
			* 
		from 
			tbl_reply
		where
			sb_num=${sb_num}
		order by	
			rp_regdate desc;
    </select>
    
  
  </mapper>