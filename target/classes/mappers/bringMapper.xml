<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.cen.mapper.BringMapper">
  
  	<select id="mainListAll"
      resultType="com.cen.domain.MainVO">
      select
			*
		from
			tbl_sboard
		order by
			sb_regdate desc
		limit
			16;
    </select>
    
    <!-- 상세페이지 보여주기 -->
    <select id="sdetail"    		
    		resultType="com.cen.domain.SboardVO">
    	select
    		*
    	from
    		tbl_sboard
    	where
    		sb_num=${num}    
    </select>
    
    <select id="bringViewAll"
    		resultType="com.cen.domain.ViewVO">
    	select 
			* 
		from 
			tbl_view
		where
			sb_num=${num};
    </select>
    
    <select id="bringTop"
    		resultType="java.lang.String">
    	select 
			view_name
		from 
			tbl_view
		where
			sb_num=${num}
		limit
			1;
    </select>
    
    <select id="bringReply"
    		resultType="com.cen.domain.ReplyVO">
    	select 
			* 
		from 
			tbl_reply
		where
			sb_num=${sb_num}
		order by	
			rp_regdate desc;
    </select>
    
    <!-- 내가 등록한 게시글주 판매중인  게시글 가져오기 -->
    <select id="bringSaling"
    		parameterType="java.lang.String"
    		resultType="com.cen.domain.SboardVO">
    	select
			* 
		from
			tbl_sboard
		where
			sb_writer="${sb_writer}" AND
			(trade_progress = "판매중" OR trade_progress="예약중");
    </select>
    
    <!-- 내가 등록한 게시글중 판매완료인  게시글 가져오기 -->
    <select id="bringSaleComplete"
    		parameterType="java.lang.String"
    		resultType="com.cen.domain.SboardVO">
    	select 	
			* 
		from 	
			tbl_sboard
		where
			sb_writer="${sb_writer}" and
			trade_progress = "판매완료";    		
    </select>
    
    <!-- 내가 찜 한 게시글 목록 정보들을 가져오기 -->
    <select id="bringBookMark"
    		parameterType="java.lang.String"
    		resultType="com.cen.domain.BookMarkVO">
    	select
			sb_num, sb_name, sb_nickname, sb_writer, Total_price, trade_progress
		from
			tbl_sboard
		where
			sb_num in (select
						 	sb_num
						from
							tbl_bookMark
						where
							sb_writer="${sb_writer}");    		
    </select>
    	
    <!-- 상세페이지 데이터 가져오기 -->
    <select id="bringCategory"
  			resultType="com.cen.domain.MainVO">
  		select
			* 
		from
			tbl_sboard
		where
			ct_num=${ct_num} AND    
			(trade_progress = "판매중" OR trade_progress="예약중")    
		order by
			sb_regdate desc;		
  	</select>
  	  		
  	<!-- 카테고리의 정보를 가져온다 -->
  	<select id="bringCateData"
  			resultType="com.cen.domain.CategoryVO">
  		select
			* 
		from
			tbl_category
		where
			ct_num=${ct_num};  			
  	</select> 
  	
    
  
  </mapper>
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  